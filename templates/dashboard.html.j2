{% extends "master.html.j2" %}
{% from "macros/spacing.html.j2" import linebreaks %}

{% block head %}
	<meta http-equiv="refresh" content="60">
	<style media="screen">
		.vscroll-body {
			overflow-y: scroll;
			height: 90vh;
		}
		.vscroll-header {
			overflow-y: scroll;
			height: 10vh;
		}

		li {
			list-style: none;
		}

		.gradient {
			position:absolute;
			z-index:2;
			right:0; bottom:0; left:0;
			height:20vh; /* adjust it to your needs */
			background: url(data:image/svg+xml;base64,alotofcodehere);
			background: -moz-linear-gradient(top,  rgba(255,255,255,0) 0%, rgba(255,255,255,1) 70%);
			background: -webkit-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 70%);
			background: -o-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 70%);
			background: -ms-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 70%);
			background: linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 70%);
		}
	</style>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-12">
		<h1>Daily Dashboard</h1>
	</div>
</div>
<div class="row">
	<div class="col-6 col-md-6 ">
		<div class="row">
			<div class="col-12 vscroll-body">
				{% for entry in entries|sort(attribute='date')|reverse %}
					{% if entry['humanized_date'] in ['yesterday', 'today', 'tomorrow'] %}
						{% set n_items = entry['items']|length %}
						<h2>{{ entry['humanized_date'] }} <span class="badge badge-secondary badge-pill">{{ n_items }}</span></h2>

						<ul class="list-group">
							{% for item in entry['items'] %}
								<li class="list-group-item {{ list_style }} list-group-item-action">
									{% if item['kind'] == 'meeting' %}
										<i class="far fa-clock"></i>
									{% elif item['kind'] == 'todo' and item['complete'] == True %}
										<i class="fas fa-check-circle"></i>
									{% elif item['kind'] == 'todo' and (item['complete'] == False or 'complete' not in item.keys()) %}
										<i class="far fa-circle"></i>
									{% elif item['kind'] == 'note' %}
										<i class="far fa-sticky-note"></i>
									{% endif %}
									{{ item['content'] }}
								</li>
							{% endfor %}
							<br>
						</ul>
					{% endif %}
				{% endfor %}
				{{ linebreaks(4) }}
			</div>
		</div>
		<div class="row gradient">
			<div class="col-12">
				<!-- <div class="gradient">

				</div> -->
			</div>
		</div>
	</div>
	<div class="col-6 col-md-6">
		<h2>today's agenda <a href="http://calendar.google.com" align="right"><i class="fas fa-external-link-alt"></i></a></h2>
		<table class="table">
			<tr>
				<th>date</th>
				<th>time till</th>
				<th>summary</th>
			</tr>
			{% for event in events %}
			<tr>
				<td>{{ event['start']['humanized_date'] }}</td>
				<td>{{ event['start']['humanized_delta'] }}</td>
				<td>{{ event['summary'] }}</td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>
{% endblock %}
